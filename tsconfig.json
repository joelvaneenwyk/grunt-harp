{
    /**
     * Visit https://aka.ms/tsconfig to read more about this file
     */
    "include": [
        "src",
        "test/"
    ],
    "compilerOptions": {
        "incremental": true,
        "target": "es2016",
        "module": "NodeNext",
        "rootDir": "./",
        "moduleResolution": "NodeNext",
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "skipLibCheck": true
    }
}
